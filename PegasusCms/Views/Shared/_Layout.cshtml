<!DOCTYPE html>
<html lang="en">
@{
    var mainMenu = ViewBag.MainMenu as Models.Page.Menu;
    var sideMenu = ViewBag.SideMenu as Models.Page.Menu;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/vendor/bootstrap-5.1.3-dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/vendor/bootstrap-icons-1.7.1/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/vendor/bootstrap-5.1.3-dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</head>
<body>

    <header>
        <nav class="navbar pc-links navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" href="/"><i class="bi-house"></i></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @foreach (var menuItem in mainMenu.MenuItems)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark @(menuItem.Active ? "active" : string.Empty)" @(menuItem.Active ? "aria-current=\"true\"" : string.Empty) href="@Html.Raw(menuItem.Url)">@menuItem.Title</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    @if (sideMenu?.MenuItems != null)
    {
        <div class="container-xxl pc-layout">
            <asside class="pc-sidebar pc-links">
                <nav>
                    <ul class="list-unstyled">
                        @foreach (var menuItem in sideMenu.MenuItems)
                        {
                            <li class="nav-item">
                                <a class="nav-link @(menuItem.Active ? "active" : string.Empty)" @(menuItem.Active ? "aria-current=\"true\"" : string.Empty) href="@Html.Raw(menuItem.Url)">@menuItem.Title</a>
                            </li>
                        }
                    </ul>
                </nav>
            </asside>
            <main class="pc-main">
                @RenderBody()
            </main>
        </div>
    }
    else
    {
        <div class="container-xxl">
            <main role="main" class="content">
                @RenderBody()
            </main>
        </div>
    }

    <footer class="border-top mt-5 footer text-muted">
        <div class="container">
            &copy; 2021 - Pegasus CMS
        </div>
    </footer>
</body>
</html>